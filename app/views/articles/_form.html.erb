<div class="panel">
  <%= render 'shared/errors', obj: @article %>
</div>

<div class='row article_form'>
  <div class='col-lg'>
    <%= form_for @article do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title Your Creation!!!", autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %></br>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Place Your Creation Here!!!" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-dark" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
     [ <%= link_to "Cancel Request and Return to Creations!", articles_path %> ]
  </div>  
  </div>
</div>
