<div class="panel">
  <%= render 'shared/errors', obj: @user %>
</div>

<div class='row article_form'>
  <div class='col-lg'>
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :username, "Alter" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Your Alter's name!!!", autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email %></br>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, rows: 1, class: "form-control", placeholder: "Enter Email:" %>
        </div>
      </div>
  <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password %></br>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, rows: 1, class: "form-control", placeholder: "Enter Password:" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit(@user.new_record? ? "Create!!!" : "Edit Your Alter_Space", class: "btn btn-primary btn-lg btn-success") %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
     [ <%= link_to "Cancel Request and Return to Creations!", articles_path %> ]
  </div>  
  </div>
</div>