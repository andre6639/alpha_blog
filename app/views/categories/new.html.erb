<h1 align="center">
  Create a New Alter_Category
</h1>

<div class="panel">
  <%= render 'shared/errors', obj: @category %>
</div>

<div class='row article_form'>
  <div class='col-lg'>
    <%= form_for(@category) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :name, "Name" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Category Name!", autofocus: true %>
        </div>
    </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-success" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
     [ <%= link_to "Cancel Request and Return to Creations!", articles_path %> ]
  </div>  
  </div>
</div>